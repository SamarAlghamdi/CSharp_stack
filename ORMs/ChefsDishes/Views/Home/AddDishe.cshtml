@model Dishe

   <h1><a href="/">Home</a></h1>
   
   <div class="card p-3">
   <form asp-action="Create" asp-controller="Home" method="post">
   <div class='form-group'>
      <label asp-for="Name">Name of the Dishe</label> 
      <input class="form-control" asp-for="Name">
      <span asp-validation-for="Name" class="text-danger"></span>
   </div>
   <div class='form-group'>
      <label asp-for="Calorais"># of Calories</label> 
      <input class="form-control" asp-for="Calorais">
      <span asp-validation-for="Calorais" class="text-danger"></span>
   </div>
  <div class="form-group">
            <label asp-for="Tastiness">Tastiness</label>
                <select class="form-control" asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
      <span asp-validation-for="Tastiness" class="text-danger"></span>
   </div>
   <div class="form-group">
            <label asp-for="ChefId">Chef</label>
                <select class="form-control" asp-for="ChefId">
                    @foreach(var chef in ViewBag.AllChefs){
                        <option value=@chef.ChefId>@chef.FirstName @chef.LastName</option>
                    }
                </select>
      <span asp-validation-for="ChefId" class="text-danger"></span>
   </div>
      <div class='form-group'>
      <label asp-for="Desc">Discrption</label> 
      <input class="form-control" asp-for="Desc">
      <span asp-validation-for="Desc" class="text-danger"></span>
   </div>

   <button class="btn btn-primary" type="submit">Add a Dish</button>

   </form>
   </div>
