
@model Transaction;
<a href="/logout" class="text-right">Logout</a>
<div class="row">
    <div class="col-md-9">
        <h2>Welcome, @ViewBag.user.FirstName @ViewBag.user.LastName</h2>
    </div>
    <div class="col-md-3 row">
        Current balance: <span class="card w-50 text-center">@ViewBag.user.balance</span>
    </div>
</div>
<div class="row mt-3">
    <p class="col-md-2">Deposite/Withdrow:</p>
    <form class="col-md-8 row" asp-action="Submit" asp-validation="User" method="post">
        <dic class="form-group col-md-4">
            <input asp-for="Amount" class="form-control"/>
            <span class="text-danger" asp-validation-for="Amount"></span>
        </dic>
        <div class=" col-md-2 ml-4">
            <button class="btn btn-primary">Submit</button>
        </div>
        
    </form>
</div>

<div class="text-center mt-3 row">
    <div class="card col-8">
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                    @foreach(var tra in ViewBag.Alltra)
                    { 
                        <tr>
                        <td>@tra.Amount</td>
                        <td>@tra.CreatedAt</td>
                        </tr>
                    }
                </table>
            </div>
    </div>
</div>
