@model Wedding;
<form asp-action="WeddingForm" asp-controller="Home" class="shadow-lg p-4 mb-5 bg-white rounded border">
    <h1 class="text-center text-muted">Plan Your Wedding</h1>
    <div class="form-group">
        <label asp-for="WedderOne"></label>
        <input asp-for="WedderOne" class="form-control">
        <span class="text-danger" asp-validation-for="WedderOne"></span>
    </div>

     <div class="form-group">
        <label asp-for="WedderTwo"></label>
        <input asp-for="WedderTwo" class="form-control">
        <span class="text-danger" asp-validation-for="WedderTwo"></span>
    </div>

     <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
     <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control">
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <Button class="btn btn-outline-dark">Create</Button>
</form>