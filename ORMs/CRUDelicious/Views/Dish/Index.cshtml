
<h1 class="text-center">Welcome to CRUDelicious</h1>

<div class="container">
    <div class="row">
    <h3 class="col-10">Check out some recent dishes</h3>
    <a class=" col-2" href="/new">Add a dish</a>
    </div>
    <hr/>
    <ul>
        @foreach(Dishe d in ViewBag.AllDishes){
            <li><a href="@d.DisheId">@d.Name</a> by @d.Chef</li>
        }
    </ul>
</div>
