@model Product;

<div>
    <h1 class="text-center">Products | <a href="/categories">Categories</a></h1>
    <div class="d-flex justify-content-between mt-3">
        <div class="col md-6 card p-3 mr-2">
            <h3 class="text-center">New Product</h3>
            <form asp-action="AddProduct" asp-validation="Home" method="post">
                <div class="form-group">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" asp-for="Name"/>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Product Description</label>
                    <input asp-for="Description" asp-for="Description"/>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Product Price</label>
                    <input asp-for="Price" asp-for="Price"/>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <button class="btn btn-primary">Add</button>
            </form>
        </div>
        <div class="col md-6 card p-3 ml-2">
            <h3 class="text-center">Existing Products</h3>
            <ul>
                @foreach(var p in ViewBag.AllProducts){
                    <p><a href="/product/@p.ProductId" class="text-primary"> @p.Name </a></p>
                }
            </ul>
            
        </div>
    </div>
</div>
