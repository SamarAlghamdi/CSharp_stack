@model Survey;
<div class="card p-3">
<form asp-action="survey" asp-controller="Form" method="post">
   <div class='form-group'>
      <label asp-for="Name"></label> 
      <span class="text-danger"  asp-validation-for="Name"></span>
      <input  asp-for="Name" class="form-control">
   </div>
   <div class='form-group'>
      <label asp-for='Location'></label> 
      <span class="text-danger"  asp-validation-for="Location"></span>
      <select asp-for='Location' class="form-control">
         <option value="riyadh">Riyadh</option>
            <option value="jeddah">Jeddah</option>
            <option value="taif">Taif</option>
      </select>       
   </div>

   <div class='form-group'>
      <label asp-for='Language'></label> 
      <span class="text-danger"  asp-validation-for="Language"></span>
      <select class="form-control" asp-for='Language'>
         <option value="c#">C#</option>
            <option value="c++">c++</option>
            <option value="python">Python</option>
      </select>       
   </div>
      <div class='form-group'>
      <label asp-for='Comment'>Comment (optional)</label> 
      <span class="text-danger"  asp-validation-for="Comment"></span>
      <textarea class="form-control" asp-for='Comment'></textarea>      
   </div>
   <button class="btn btn-primary" type="submit">Submit</button>

</form>
</div>
