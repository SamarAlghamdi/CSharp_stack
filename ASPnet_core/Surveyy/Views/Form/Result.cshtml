@model SurveyClass
@using Survey.Models;
<div class="d-flex justify-content-center">
<div class="card p-3 w-50">
    <h2>Submited Info</h2>
    <div class="row">
        <div class="col-md-4">
            <strong>Name</strong>
        </div>
          <div class="col-md-3">
            <p>@Model.Name</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <strong>Dojo Location</strong>
        </div>
          <div class="col-md-3">
            <p>@Model.Location</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <strong>Language</strong>
        </div>
          <div class="col-md-3">
            <p>@Model.lang</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <strong>Comment</strong>
        </div>
          <div class="col-md-3">
            <p>@Model.Comment</p>
        </div>
    </div>
    <div class="d-flex justify-content-end">
            <a href="/" class="btn btn-primary">Go back</a>
    </div>
   
</div>
</div>